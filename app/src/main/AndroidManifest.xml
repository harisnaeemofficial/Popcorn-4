<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.akanksha.imdb">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity
            android:name=".Nav_Activity"
            android:label="@string/title_activity_nav_"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".ViewActivity"
            android:label="@string/title_activity_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FavoriteActivity"
            android:label="@string/title_activity_favorite" />
        <activity
            android:name=".ViewAllTVActivity"
            android:label="@string/title_activity_view_all_tv"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MovieDetailActivity"
            android:label="@string/title_activity_movie_detail"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".UserReviewsActivity"
            android:label="@string/title_activity_user_reviews"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".ViewAllCastActivity"></activity>
    </application>

</manifest>